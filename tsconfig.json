{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "allowJs": false,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
